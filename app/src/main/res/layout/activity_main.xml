<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical" android:id="@+id/main_layout"
        android:gravity="center">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_text" android:textAlignment="center" android:minHeight="50dp"
            android:autofillHints="no" android:hint="@string/edit_text_hint"/>
    <CheckBox
            android:text="@string/check_box_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/check_box" android:textAlignment="center"/>
    <Button
            android:text="@string/submit_button_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/subbmit"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/view_text" android:textAlignment="center"
            android:hint="@string/view_text_hint"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progress_bar"/>
</LinearLayout>